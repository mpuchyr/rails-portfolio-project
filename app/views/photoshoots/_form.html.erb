<%= form_for @photoshoot do |p| %>
    <%= p.hidden_field :user_id, value: session[:user_id] %>
    <%= p.fields_for :location_attributes, @photoshoot.location do |l| %>
        <%= l.label "Choose Location: " %>
        <%= l.collection_select :id, Location.all, :id, :name, :include_blank => true %>
        <br>
        <%= l.label "Add New Location: " %> 
        <%= l.text_field :name, :value => "" %>
    <% end %>
    <br>
    <% Time.use_zone(@timezone) do %>
        <%= p.label :start_time, "Start Time: " %>
        <%= p.datetime_select :start_time, ampm: true %>
        <br>
        <%= p.label :end_time, "End Time: " %>
        <%= p.datetime_select :end_time, ampm: true %>
        <br>
    <% end %>
    <%= p.label :comments, "Comments: " %>
    <%= p.text_area :comments %>
    <br>
    <%= p.submit %>
<% end %>