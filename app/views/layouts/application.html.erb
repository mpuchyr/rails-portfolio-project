<!DOCTYPE html>
<html>
  <head>
    <title>RailsPortfolioProject</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>


  </head>

  <body>
    <% Time.zone = @timezone %>
    <header>
      <% if !session[:user_id] %>
        <button><%= link_to('Log in with Facebook', '/auth/facebook') %></button>
        <button><%= link_to "Log In", login_path %></button>
        <button><%= link_to "Sign Up", signup_path %></button>
      <% else %>
        <button><%= link_to "Preferences", preferences_path %></button>
        <button><%= link_to "Log Out", logout_path %></button>
      <% end %>
    </header>
    <div class="wrapper">
      <%= yield %>
    </div>
  </body>
</html>
