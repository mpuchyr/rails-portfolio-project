<% if @user.errors.any? %>
    <div id="error_explanation">
        <h2><%= pluralize(@user.errors.count, "error") %> prevented you from signing up: </h2>
        <ul>
            <% @user.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
        </ul>
    </div>
<% end %>

<%= form_for @user do |f| %>
    Username: <%= f.text_field :username %>
    <br>
    Email: <%= f.text_field :email %>
    <br>
    Password: <%= f.password_field :password %>
    <br>
    Time Zone: <%= f.collection_select :time_zone, ActiveSupport::TimeZone.all, :name, :to_s %>
    <br>
    <%= f.submit %>
<% end %>